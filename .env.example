# OKX API 配置
# 从 OKX 官网获取: https://www.okx.com/account/my-api
OKX_API_KEY=your_api_key_here
OKX_SECRET_KEY=your_secret_key_here
OKX_PASSPHRASE=your_passphrase_here

# 是否使用测试网（模拟盘）
# true: 测试网/模拟盘, false: 正式网/实盘
OKX_USE_TESTNET=true

# Telegram 配置
# Bot Token: 从 @BotFather 获取
# Chat ID: 从 @userinfobot 获取
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=your_chat_id_here
TELEGRAM_ENABLED=true

# 交易配置
# 本金 (USDT)
TRADING_CAPITAL=1000.0

# 安全价格范围（超出此范围停止交易）
SAFE_PRICE_MIN=90.0
SAFE_PRICE_MAX=150.0

# ===== 斥波那契网格策略配置 =====
# 启用后将使用斥波那契策略替代原有网格策略
FIBONACCI_ENABLED=false
# 价格范围
FIBONACCI_PRICE_MIN=100.0
FIBONACCI_PRICE_MAX=160.0
# 最大持仓张数
FIBONACCI_MAX_POSITION=40

# ===== 网格交易配置 =====

# 跌幅触发买入（美元）
# 正常跌幅范围: 3.2-3.6 美元
GRID_NORMAL_DROP_MIN=3.2
GRID_NORMAL_DROP_MAX=3.6
# 大跌幅阈值: 5 美元以上
GRID_LARGE_DROP=5.0

# 高价区间 (≥$120) 买入张数
GRID_HIGH_NORMAL_QTY=1
GRID_HIGH_LARGE_QTY=2

# 低价区间 (<$120) 买入张数
GRID_LOW_NORMAL_QTY=2
GRID_LOW_LARGE_QTY=3

# 分批止盈配置
# 保留张数（等更高价卖出）
GRID_RESERVE_QTY=1
# 保留仓位止盈目标（涨多少美元后卖出）
GRID_RESERVE_PROFIT=10.0

# 日志配置
LOG_LEVEL=INFO

# 检查间隔 (秒)
CHECK_INTERVAL=5
